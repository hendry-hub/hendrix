doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Register - Sports Management System
  style.
    body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100vh;
    }
    form {
    background-color: #fff;
    padding: 2em;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    label {
    display: block;
    margin-bottom: 0.5em;
    }
    input {
    width: 100%;
    padding: 0.5em;
    margin-bottom: 1em;
    }
    select {
    width: 100%;
    padding: 0.5em;
    margin-bottom: 1em;
    }
    button {
    background-color: #333;
    color: #fff;
    padding: 0.5em 1em;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    }
  script.
    function redirectToDashboard() {
    // Redirect to the fan dashboard after successful registration
    window.location.href = 'sports.html';
    }
form
